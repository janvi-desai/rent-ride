@model CarRentalSystem.Models.CarModel
@{
    ViewData["Title"] = "Car Details";
}

<h2>@Model.Brand @Model.Model</h2>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height:400px;" />
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Year</dt>
            <dd class="col-sm-8">@Model.Year</dd>

            <dt class="col-sm-4">Fuel Type</dt>
            <dd class="col-sm-8">@Model.FuelType</dd>

            <dt class="col-sm-4">Transmission</dt>
            <dd class="col-sm-8">@Model.Transmission</dd>

            <dt class="col-sm-4">Price/Day</dt>
            <dd class="col-sm-8">₹@Model.PricePerDay</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        </dl>

        <a asp-controller="Rental" asp-action="Create" asp-route-carId="@Model.Id" class="btn btn-success">Rent This Car</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
