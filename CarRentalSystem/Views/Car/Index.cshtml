@model IEnumerable<CarRentalSystem.Models.CarModel>
@{
    ViewData["Title"] = "Browse Cars";
}

<h2>Available Cars</h2>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="@car.ImageUrl" class="card-img-top" alt="@car.Brand @car.Model" style="height:200px;object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title">@car.Brand @car.Model</h5>
                    <p class="card-text">
                        <strong>Year:</strong> @car.Year<br />
                        <strong>Fuel:</strong> @car.FuelType<br />
                        <strong>Transmission:</strong> @car.Transmission<br />
                        <strong>Price/Day:</strong> ₹@car.PricePerDay
                    </p>
                    <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
