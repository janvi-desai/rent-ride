@model CarRentalSystem.Models.CarModel
@{
    ViewData["Title"] = "Delete Car";
}

<h2>Delete Confirmation</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this car?
</div>

<dl class="row">
    <dt class="col-sm-3">Brand</dt>
    <dd class="col-sm-9">@Model.Brand</dd>

    <dt class="col-sm-3">Model</dt>
    <dd class="col-sm-9">@Model.Model</dd>

    <dt class="col-sm-3">Year</dt>
    <dd class="col-sm-9">@Model.Year</dd>

    <dt class="col-sm-3">Price/Day</dt>
    <dd class="col-sm-9">₹@Model.PricePerDay</dd>

    <dt class="col-sm-3">Fuel</dt>
    <dd class="col-sm-9">@Model.FuelType</dd>

    <dt class="col-sm-3">Transmission</dt>
    <dd class="col-sm-9">@Model.Transmission</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="AdminIndex" class="btn btn-secondary">Cancel</a>
</form>
