@model CarRentalSystem.Models.PaymentModel
@{
    ViewData["Title"] = "Delete Payment";
}
<h3>Are you sure you want to delete this payment?</h3>

<dl class="row">
    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.Amount</dd>

    <dt class="col-sm-2">Method</dt>
    <dd class="col-sm-10">@Model.PaymentMethod</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.PaymentDate.ToShortDateString()</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
