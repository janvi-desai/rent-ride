@model CarRentalSystem.Models.RentalModel
@{
    ViewData["Title"] = "Rent Car";
}
<h2>Rent Car</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CarId" />
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        @Html.LabelFor(m => m.RentDate)
        @Html.TextBoxFor(m => m.RentDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.RentDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ReturnDate)
        @Html.TextBoxFor(m => m.ReturnDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.ReturnDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PickupLocation)
        @Html.TextBoxFor(m => m.PickupLocation, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PickupLocation)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DropLocation)
        @Html.TextBoxFor(m => m.DropLocation, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DropLocation)
    </div>

    <button type="submit" class="btn btn-primary">Book Now</button>
</form>
